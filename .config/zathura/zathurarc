# Zathura Feather Dark
#
# Zathura Settings
#

set font                        "JetBrainsMono Nerd Font 11"
set scroll-step                 "50"
set statusbar-h-padding         "22"
set statusbar-v-padding         "11"
set window-title-basename       "true"
set selection-clipboard         "clipboard"
set statusbar-basename          "true"
set adjust-open best-fit

#
# Colors
#

set notification-error-bg       "#ff6c6b" # Background
set notification-error-fg       "#c4b8d3" # Foreground
set notification-warning-bg     "#ecbe7b" # Background
set notification-warning-fg     "#503f65" # Foreground
set notification-bg             "#9783b1" # Background
set notification-fg             "#503f65" # Foreground

set n-completion-items          "6"
set completion-bg               "#251d2f" # Background
set completion-fg               "#503f65" # Foreground
set completion-group-bg         "#251d2f" # Background
set completion-group-fg         "#503f65" # Foreground
set completion-highlight-bg     "#251d2f" # Background
set completion-highlight-fg     "#9783b1" # Foreground

set index-bg                    "rgba(15, 12, 19, 0.0)" # Background
set index-fg                    "#503f65" # Foreground
set index-active-bg             "rgba(15, 12, 19, 0.0)" # Background
set index-active-fg             "#9783b1" # Foreground

set inputbar-bg                 "#1a1521" # Background
set inputbar-fg                 "#9783b1" # Foreground
set statusbar-bg                "#1a1521" # Background
set statusbar-fg                "#9783b1" # Foreground

set highlight-active-color      "#9783b1" # Active
