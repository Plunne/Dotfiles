set notification-warning-fg     "#4a3b5e" # Foreground
set notification-bg             "#9783b1" # Background
set notification-fg             "#4a3b5e" # Foreground

set n-completion-items          "6"
set completion-bg               "#f0edf4" # Background
set completion-fg               "#4a3b5e" # Foreground
set completion-group-bg         "#f0edf4" # Background
set completion-group-fg         "#4a3b5e" # Foreground
set completion-highlight-bg     "#f0edf4" # Background
set completion-highlight-fg     "#9783b1" # Foreground

set index-bg                    "rgba(217, 210, 227, 0.0)" # Background
set index-fg                    "#4a3b5e" # Foreground
set index-active-bg             "rgba(217, 210, 227, 0.0)" # Background
set index-active-fg             "#008070" # Foreground

